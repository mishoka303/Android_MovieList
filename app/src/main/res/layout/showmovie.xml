<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="249dp"
        android:layout_height="22dp"
        android:id="@+id/index"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:paddingLeft="5pt"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:paddingStart="5pt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="7dp" android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@+id/year" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
        app:layout_constraintBottom_toTopOf="@+id/rating"/>
    <TextView
        android:layout_width="249dp"
        android:layout_height="22dp"
        android:id="@+id/year"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:paddingLeft="5pt"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:paddingStart="5pt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="7dp" android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@+id/genre" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
        app:layout_constraintBottom_toTopOf="@+id/index"/>
    <TextView
        android:layout_width="249dp"
        android:layout_height="22dp"
        android:id="@+id/genre"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:paddingLeft="5pt"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:paddingStart="5pt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="7dp" android:layout_marginStart="7dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
        app:layout_constraintTop_toBottomOf="@+id/director" app:layout_constraintBottom_toTopOf="@+id/year"/>
    <TextView
        android:layout_width="249dp"
        android:layout_height="22dp"
        android:id="@+id/director"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:paddingLeft="5pt"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:paddingStart="5pt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="7dp" android:layout_marginStart="7dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
        app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintBottom_toTopOf="@+id/genre"/>
    <TextView
        android:layout_width="249dp"
        android:layout_height="22dp"
        android:id="@+id/name"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:paddingLeft="5pt"
        android:paddingStart="5pt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="7dp" android:layout_marginStart="7dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="162dp" android:layout_marginRight="162dp" android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/director"/>
    <RatingBar
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:id="@+id/rating"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="7dp" android:layout_marginStart="7dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="270dp" android:layout_marginRight="270dp"
        app:layout_constraintTop_toBottomOf="@+id/index" android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        tools:ignore="MissingConstraints" android:id="@+id/view3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/rating"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>